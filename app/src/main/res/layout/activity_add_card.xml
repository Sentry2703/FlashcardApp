<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/diff_yellow"
    tools:context=".AddCardActivity">

    <EditText
        android:id="@+id/New_Question"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin = "20dp"
        android:hint="@string/your_question_here_bozo"
        android:autofillHints=""
        android:inputType="text" />

    <EditText
        android:id="@+id/New_Answer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/New_Question"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:hint="@string/your_answer_bozo"
        android:autofillHints="" />

    <EditText
        android:id="@+id/New_Wrong_Answer_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/New_Question"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:hint="@string/wrong_answer_bozo" />

    <EditText
        android:id="@+id/New_Wrong_Answer_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/New_Question"
        android:layout_marginTop="210dp"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:hint="@string/wrong_answer_2_bozo"
        android:autofillHints=""
         />

    <ImageView
        android:id="@+id/cancel_button"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:src="@drawable/icon_cancel"
        android:layout_alignParentEnd= "true"
        android:layout_alignParentBottom= "true"
        android:contentDescription="@string/todo" />

    <ImageView
        android:id="@+id/save_button"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/icon_save"
        android:contentDescription="@string/todo" />

</RelativeLayout>